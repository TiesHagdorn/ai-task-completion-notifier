{
  "manifest_version": 3,
  "name": "AI Task completion notifier",
  "description": "Notifies you when an AI task is complete.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*"
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": "icon128.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}

